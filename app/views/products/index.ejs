<a href="/products/new" class="product-new-link">New Product</a>

<h1>Products</h1>
<table border="1">
	<thead>
		<th>Name</th>
		<th>Description</th>
		<th>Price</th>
		<th>Action</th>
	</thead>
	<tbody>
	  <% for(var i=0; i<products.length; i++) { %>
	  	<tr>
		  	<td><%= products[i].name %></td>
		  	<td><%= products[i].description %></td>
		  	<td><%= products[i].price %></td>
		  	<td>
					<a href="/products/<%= products[i]._id %>">Show</a>
					<a href="/products/<%= products[i]._id %>/edit">Edit</a>
					<a data-confirm="Are you sure?" data-method="delete" href="/products/<%= products[i]._id %>">Delete</a>
				</td>
	  	</tr>
	  <% } %>	
	</tbody>
</table>
